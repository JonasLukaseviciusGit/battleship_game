import threading
import time
from PIL import ImageTk, Image

SIZE = 700
DIMENSION = 20

TOTAL_SIZE = 1000

window = tk.Tk()
window.title("Battleships")

canvas = tk.Canvas(window, width=TOTAL_SIZE, height=SIZE)
canvas.pack()


