import numpy as np
import pandas as pd
from board_generator import make_board

DIMENSION = 20
matrix = make_board()

df = pd.DataFrame()

columns = []
data = []

for i in range(matrix.shape[0]):
    for j in range(matrix.shape[1]):
        coordinate = f'{i}_{j}'
        value = matrix[i, j]
        columns.append(coordinate)
        data.append(value)

data = np.array(data).reshape(-1, len(columns))
df = pd.concat([df, pd.DataFrame(data, columns=columns)], axis=1)

print(df)
